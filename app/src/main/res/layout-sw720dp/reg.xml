<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/backhor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8pt"
        android:background="@drawable/backbluewhite"
        app:layout_constraintBottom_toTopOf="@id/backhor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_default="percent">
            <RelativeLayout
                android:id="@+id/progressbar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:translationZ="20dp"
                android:elevation="30dp"
                android:visibility="gone"
                android:background="@drawable/backbluebig3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/prgs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    style="?android:attr/progressBarStyleLarge"/>
            </RelativeLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cardhor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.08" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cardhor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.94" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cardver1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.08" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cardver2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.92" />
            <androidx.cardview.widget.CardView
                android:id="@+id/cv2"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/cardhor1"
                app:layout_constraintLeft_toRightOf="@id/cardver1"
                app:layout_constraintRight_toLeftOf="@id/cardver2">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/cdver2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.93" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/cdver1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.07" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/cdhor1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintGuide_percent="0.035" />

                                <TextView
                                    android:id="@+id/emailTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_light"
                                    android:labelFor="@id/emailEdtx"
                                    android:paddingStart="8sp"
                                    android:text="@string/email"
                                    android:textColor="#000"
                                    android:textSize="19sp"
                                    app:layout_constraintLeft_toRightOf="@id/cdver1"
                                    app:layout_constraintTop_toBottomOf="@id/cdhor1" />

                                <EditText
                                    android:id="@+id/emailEdtx"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:autofillHints="@string/email"
                                    android:background="@drawable/backwhite"
                                    android:fontFamily="@font/helvetica_light"
                                    android:inputType="textEmailAddress"
                                    android:paddingHorizontal="8sp"
                                    android:paddingVertical="7dp"
                                    android:textSize="19sp"
                                    app:layout_constrainedWidth="true"
                                    app:layout_constraintLeft_toRightOf="@id/cdver1"
                                    app:layout_constraintRight_toLeftOf="@id/cdver2"
                                    app:layout_constraintTop_toBottomOf="@id/emailTV" />

                                <TextView
                                    android:id="@+id/nameTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:labelFor="@id/nameEdtx"
                                    android:paddingStart="8sp"
                                    android:text="NAMA"
                                    android:textColor="#000"
                                    android:textSize="19sp"
                                    app:layout_constraintLeft_toRightOf="@id/cdver1"
                                    app:layout_constraintTop_toBottomOf="@id/emailEdtx" />

                                <EditText
                                    android:id="@+id/nameEdtx"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:autofillHints="nama"
                                    android:background="@drawable/backwhite"
                                    android:fontFamily="@font/helvetica_light"
                                    android:inputType="text"
                                    android:paddingHorizontal="8sp"
                                    android:paddingVertical="7dp"
                                    android:textSize="19sp"
                                    app:layout_constrainedWidth="true"
                                    app:layout_constraintLeft_toRightOf="@id/cdver1"
                                    app:layout_constraintRight_toLeftOf="@id/cdver2"
                                    app:layout_constraintTop_toBottomOf="@id/nameTV" />

                                <TextView
                                    android:id="@+id/ageTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:labelFor="@id/ageEdtx"
                                    android:paddingStart="8sp"
                                    android:text="UMUR"
                                    android:textColor="#000"
                                    android:textSize="19sp"
                                    app:layout_constraintLeft_toLeftOf="@id/ageEdtx"
                                    app:layout_constraintTop_toBottomOf="@id/nameEdtx" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/cdver3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.45" />

                                <EditText
                                    android:id="@+id/ageEdtx"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/backwhite"
                                    android:fontFamily="@font/helvetica_light"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="2"
                                    android:paddingHorizontal="8sp"
                                    android:paddingVertical="7dp"
                                    android:textSize="19sp"
                                    app:layout_constrainedWidth="true"
                                    app:layout_constraintLeft_toRightOf="@id/cdver1"
                                    app:layout_constraintRight_toLeftOf="@id/cdver3"
                                    app:layout_constraintTop_toBottomOf="@id/ageTV" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/cdver4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.50" />

                                <TextView
                                    android:id="@+id/genderTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:labelFor="@id/genderEdtx"
                                    android:paddingStart="8sp"
                                    android:text="GENDER"
                                    android:textColor="#000"
                                    android:textSize="19sp"
                                    app:layout_constraintLeft_toLeftOf="@id/genderEdtx"
                                    app:layout_constraintTop_toBottomOf="@id/nameEdtx" />

                                <RadioGroup
                                    android:id="@+id/genderEdtx"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:orientation="horizontal"
                                    app:layout_constrainedHeight="true"
                                    app:layout_constrainedWidth="true"
                                    app:layout_constraintBottom_toBottomOf="@id/ageEdtx"
                                    app:layout_constraintRight_toRightOf="@id/cdver2"
                                    app:layout_constraintTop_toTopOf="@id/ageEdtx">

                                    <androidx.appcompat.widget.AppCompatRadioButton
                                        android:id="@+id/radio0"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="5dp"
                                        android:background="@drawable/cstmradio"
                                        android:button="@drawable/cstmradio"
                                        android:fontFamily="@font/roboto_light"
                                        android:gravity="center"
                                        android:minWidth="55dp"
                                        android:text="L"
                                        android:textSize="19sp" />

                                    <androidx.appcompat.widget.AppCompatRadioButton
                                        android:id="@+id/radio1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="5dp"
                                        android:background="@drawable/cstmradio"
                                        android:button="@drawable/cstmradio"
                                        android:fontFamily="@font/roboto_light"
                                        android:gravity="center"
                                        android:minWidth="55dp"
                                        android:text="P"
                                        android:textSize="19sp" />
                                </RadioGroup>

                                <TextView
                                    android:id="@+id/phoneTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:labelFor="@id/phoneEdtx"
                                    android:paddingStart="8sp"
                                    android:text="TELEPON"
                                    android:textColor="#000"
                                    android:textSize="19sp"
                                    app:layout_constraintLeft_toRightOf="@id/cdver1"
                                    app:layout_constraintTop_toBottomOf="@id/ageEdtx" />

                                <EditText
                                    android:id="@+id/phoneEdtx"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/backwhite"
                                    android:fontFamily="@font/helvetica_light"
                                    android:inputType="phone"
                                    android:paddingHorizontal="8sp"
                                    android:paddingVertical="7dp"
                                    android:textSize="19sp"
                                    app:layout_constrainedWidth="true"
                                    app:layout_constraintLeft_toRightOf="@id/cdver1"
                                    app:layout_constraintRight_toLeftOf="@id/cdver2"
                                    app:layout_constraintTop_toBottomOf="@id/phoneTV" />

                                <TextView
                                    android:id="@+id/addTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:labelFor="@id/addEdtx"
                                    android:paddingStart="8sp"
                                    android:text="ALAMAT"
                                    android:textColor="#000"
                                    android:textSize="19sp"
                                    app:layout_constraintLeft_toRightOf="@id/cdver1"
                                    app:layout_constraintTop_toBottomOf="@id/phoneEdtx" />

                                <EditText
                                    android:id="@+id/addEdtx"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/backwhite"
                                    android:fontFamily="@font/helvetica_light"
                                    android:inputType="text"
                                    android:paddingHorizontal="8sp"
                                    android:paddingVertical="7dp"
                                    android:textSize="19sp"
                                    app:layout_constrainedWidth="true"
                                    app:layout_constraintLeft_toRightOf="@id/cdver1"
                                    app:layout_constraintRight_toLeftOf="@id/cdver2"
                                    app:layout_constraintTop_toBottomOf="@id/addTV" />

                                <TextView
                                    android:id="@+id/pass1TV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:labelFor="@id/pass1Edtx"
                                    android:paddingStart="8sp"
                                    android:text="PASSWORD"
                                    android:textColor="#000"
                                    android:textSize="19sp"
                                    app:layout_constraintLeft_toLeftOf="@id/pass1Edtx"
                                    app:layout_constraintTop_toBottomOf="@id/addEdtx" />

                                <TextView
                                    android:id="@+id/pass2TV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:labelFor="@id/pass2Edtx"
                                    android:paddingStart="8sp"
                                    android:text="KONFIRMASI"
                                    android:textColor="#000"
                                    android:textSize="19sp"
                                    app:layout_constraintLeft_toLeftOf="@id/pass2Edtx"
                                    app:layout_constraintTop_toBottomOf="@id/addEdtx" />

                                <EditText
                                    android:id="@+id/pass1Edtx"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:autofillHints="@string/password"
                                    android:background="@drawable/backwhite"
                                    android:fontFamily="@font/helvetica_light"
                                    android:inputType="textPassword"
                                    android:paddingHorizontal="8sp"
                                    android:paddingVertical="7dp"
                                    android:textSize="19sp"
                                    app:layout_constrainedWidth="true"
                                    app:layout_constraintLeft_toRightOf="@id/cdver1"
                                    app:layout_constraintRight_toLeftOf="@id/cdver3"
                                    app:layout_constraintTop_toBottomOf="@id/pass1TV" />

                                <EditText
                                    android:id="@+id/pass2Edtx"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:autofillHints="@string/password"
                                    android:background="@drawable/backwhite"
                                    android:fontFamily="@font/helvetica_light"
                                    android:inputType="textPassword"
                                    android:paddingHorizontal="8sp"
                                    android:paddingVertical="7dp"
                                    android:textSize="19sp"
                                    app:layout_constrainedWidth="true"
                                    app:layout_constraintLeft_toRightOf="@id/cdver4"
                                    app:layout_constraintRight_toLeftOf="@id/cdver2"
                                    app:layout_constraintTop_toBottomOf="@id/pass2TV" />

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:id="@+id/buttonreg"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/backblue2"
                                    android:fontFamily="@font/roboto_bold"
                                    app:layout_constraintDimensionRatio="1:1"
                                    app:layout_constraintLeft_toLeftOf="@id/pesanTv"
                                    app:layout_constraintRight_toRightOf="@id/pesanTv"
                                    app:layout_constraintTop_toBottomOf="@id/pass1Edtx" />

                                <TextView
                                    android:id="@+id/pesanTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dp"
                                    android:fontFamily="@font/helvetica_bold"
                                    android:gravity="center"
                                    android:paddingHorizontal="5dp"
                                    android:text="DAFTAR"
                                    android:textAlignment="center"
                                    android:textColor="#FFFFFF"
                                    android:textSize="18sp"
                                    app:layout_constraintBottom_toBottomOf="@id/buttonreg"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/buttonreg" />

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    app:layout_constraintTop_toBottomOf="@id/buttonreg" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/cdhor27"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintGuide_percent="0.862" />

                                <androidx.constraintlayout.widget.Guideline
                                    android:id="@+id/cdhor28"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintGuide_percent="0.927" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/buttonlogin"
                                    style="?android:attr/borderlessButtonStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:gravity="start"
                                    android:padding="0dp"
                                    android:text="Sudah punya akun ?"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="17sp"
                                    app:layout_constrainedHeight="true"
                                    app:layout_constraintBottom_toTopOf="@id/cdhor28"
                                    app:layout_constraintLeft_toRightOf="@id/cdver1"
                                    app:layout_constraintTop_toBottomOf="@id/cdhor27"
                                    app:layout_constraintWidth_percent=".3" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>