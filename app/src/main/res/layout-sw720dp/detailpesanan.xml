<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintHeight_default="percent"
    app:layout_constraintWidth_default="percent">

    <RelativeLayout
        android:id="@+id/progressbar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:translationZ="20dp"
        android:elevation="30dp"
        android:visibility="gone"
        android:background="@drawable/backbluebig3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/prgs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            style="?android:attr/progressBarStyleLarge"/>
    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardhor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.095" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btnhor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.014" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btn2hor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.025" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btn2hor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardhor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.97" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardver1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.045" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardver2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.955" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_max="50dp"
        app:layout_constraintWidth_max="50dp"
        android:background="@drawable/backblue2"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#FFFFFF"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/cv2"
        app:layout_constraintTop_toBottomOf="@id/btnhor1"
        app:layout_constraintWidth_percent=".1" />

    <LinearLayout
        android:id="@+id/imgback"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintHeight_percent=".025"
        app:layout_constraintLeft_toLeftOf="@id/btnBack"
        app:layout_constraintRight_toRightOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:srcCompat="@drawable/back" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hshor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".038" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/hs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="1"
        android:background="@drawable/backhs"
        app:layout_constraintHeight_percent=".59"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hshor1"
        app:layout_constraintHeight_max="420dp"/>

    <TextView
        android:id="@+id/tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textSize="16sp"
        android:gravity="end"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginEnd="15dp"
        android:text="DETAIL PESANAN"
        android:textColor="#5B4949"
        app:layout_constraintBottom_toBottomOf="@id/imgback"
        app:layout_constraintRight_toRightOf="@id/cv2"
        app:layout_constraintTop_toTopOf="@id/imgback" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cv2"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintDimensionRatio="1:1.45"
        android:maxHeight="20dp"
        android:maxWidth="350dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardhor1"
        app:layout_constraintLeft_toRightOf="@id/cardver1"
        app:layout_constraintRight_toLeftOf="@id/cardver2"
        app:layout_constraintBottom_toTopOf="@id/cardhor2">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cardbghor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <RelativeLayout
                android:id="@+id/bgcard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/backbluebig2"
                app:layout_constraintBottom_toBottomOf="@id/cardbghor1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnprofile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent=".17"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="@id/bgcard"
                app:layout_constraintHorizontal_bias="0.085"
                app:layout_constraintVertical_bias="0.275"
                app:layout_constraintBottom_toBottomOf="@id/bgcard"
                app:layout_constraintRight_toRightOf="@id/bgcard"
                app:layout_constraintLeft_toLeftOf="@id/bgcard"
                android:background="@drawable/backfotobtn"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilemg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent=".15"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintVertical_bias="0.3"
                android:scaleType="centerCrop"
                android:src="@drawable/profilecg"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="@id/bgcard"
                app:layout_constraintBottom_toBottomOf="@id/bgcard"
                app:layout_constraintRight_toRightOf="@id/bgcard"
                app:layout_constraintLeft_toLeftOf="@id/bgcard"/>
            <ImageView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.03"
                app:layout_constraintDimensionRatio="1:1"
                android:src="@drawable/time"
                android:layout_marginEnd="5dp"
                app:layout_constraintRight_toLeftOf="@id/angkadur"
                app:layout_constraintBottom_toBottomOf="@id/date"
                app:layout_constraintTop_toTopOf="@id/date"/>
            <TextView
                android:id="@+id/angkadur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/helvetica_light"
                android:text="3 "
                android:layout_marginEnd="3dp"
                android:textColor="#5B4949"
                app:layout_constraintBottom_toBottomOf="@id/time"
                app:layout_constraintRight_toLeftOf="@id/paketdur"
                app:layout_constraintTop_toTopOf="@id/time" />
            <TextView
                android:id="@+id/paketdur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/helvetica_light"
                android:text="Bulan"
                android:gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="15dp"
                android:textColor="#5B4949"
                app:layout_constraintBottom_toBottomOf="@id/angkadur"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_bias="0.06"
                android:layout_marginStart="10dp"
                android:textSize="22sp"
                android:fontFamily="@font/helvetica_light"
                android:text="CareGiver1"
                android:textColor="#000"
                android:lines="1"
                app:layout_constraintBottom_toBottomOf="@id/profilemg"
                app:layout_constraintLeft_toRightOf="@id/profilemg"
                app:layout_constraintTop_toTopOf="@id/profilemg" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnnama"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/nama"
                app:layout_constraintBottom_toBottomOf="@id/nama"
                app:layout_constraintRight_toRightOf="@id/nama"
                app:layout_constraintLeft_toLeftOf="@id/nama"
                style="@style/Widget.AppCompat.Button.Borderless"/>
            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingVertical="8.5dp"
                android:text="Menunggu pembayaran"
                android:textColor="#27AE60"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:textSize="17sp"
                android:fontFamily="@font/helvetica_light"
                app:layout_constraintHeight_percent=".065"
                app:layout_constraintWidth_percent=".55"
                app:layout_constraintLeft_toRightOf="@id/profilemg"
                app:layout_constraintRight_toRightOf="@id/bgcard"
                app:layout_constraintTop_toBottomOf="@id/nama"
                app:layout_constraintBottom_toBottomOf="@id/profilemg"
                android:background="@drawable/bordergreen"
                />
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/roboto_light"
                android:text="16 Oktober 2020"
                android:textColor="#5B4949"
                app:layout_constraintBottom_toBottomOf="@id/bgcard"
                app:layout_constraintLeft_toLeftOf="@id/profilemg"
                app:layout_constraintTop_toBottomOf="@id/profilemg" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.835" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".97" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdver1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdver2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".08" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdver3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/but1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".85"/>
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnlansia"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="@id/txt"
                app:layout_constraintRight_toRightOf="@id/txt"
                app:layout_constraintTop_toTopOf="@id/txt"
                app:layout_constraintBottom_toBottomOf="@id/txt"
                style="@style/Widget.AppCompat.Button.Borderless"/>
            <TextView
                android:id="@+id/txt"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Detail Lansia"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/helvetica_light"
                android:textSize="19sp"
                app:layout_constraintLeft_toRightOf="@id/cdver2"
                app:layout_constraintTop_toBottomOf="@id/gaji"/>
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/hor"
                app:layout_constraintGuide_percent="0.35"/>

            <TextView
                android:id="@+id/a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:text="Telepon :"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toTopOf="@id/telepon" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".29" />

            <TextView
                android:id="@+id/telepon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:text="Semarang"
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@id/cdver"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/hor" />

            <TextView
                android:id="@+id/b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:text="Alamat   :"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toTopOf="@id/alamat" />
            <TextView
                android:id="@+id/alamat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:text="Gender"
                android:layout_marginTop="12dp"
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@id/cdver"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/telepon" />

            <TextView
                android:id="@+id/c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:text="Aktivitas :"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toTopOf="@id/deskripsi" />

            <TextView
                android:id="@+id/deskripsi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:text="Genderfmk"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toRightOf="@id/cdver"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/alamat" />


            <TextView
                android:id="@+id/d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:text="Total      :"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toTopOf="@id/gaji" />

            <TextView
                android:id="@+id/gaji"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:text="Gaji"
                android:layout_marginTop="12dp"
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@id/cdver"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/deskripsi" />


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:background="@drawable/backblue2"
                app:layout_constraintDimensionRatio="1:1"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintRight_toRightOf="@id/pesanTv"
                app:layout_constraintLeft_toLeftOf="@id/pesanTv"
                app:layout_constraintTop_toBottomOf="@id/cdhor1" />

            <TextView
                android:id="@+id/pesanTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_bold"
                android:gravity="center"
                android:textAlignment="center"
                android:text="BAYAR"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:paddingHorizontal="10dp"
                android:layout_marginRight="15dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnNext"
                app:layout_constraintBottom_toBottomOf="@id/btnNext"/>
            <TextView
                android:id="@+id/tulisans"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/roboto_light"
                app:layout_constraintHeight_percent=".1"
                android:lines="3"
                android:gravity="start"
                android:visibility="gone"
                android:text="* Proses merawat lansia dilakukan satu hari setelah admin mengkonfirmasi pembayaran."
                android:textSize="14sp"
                app:layout_constraintWidth_percent="0.75"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintTop_toTopOf="@id/btnNext"
                app:layout_constraintBottom_toBottomOf="@id/btnNext"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>