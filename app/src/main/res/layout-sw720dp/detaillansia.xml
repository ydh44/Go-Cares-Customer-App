<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintHeight_default="percent"
    app:layout_constraintWidth_default="percent">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardhor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.095" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btnhor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.014" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btn2hor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.025" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btn2hor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardhor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.97" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardver1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.045" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardver2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.955" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_max="50dp"
        app:layout_constraintWidth_max="50dp"
        android:textSize="13sp"
        android:background="@drawable/backblue2"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#FFFFFF"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/cv2"
        app:layout_constraintTop_toBottomOf="@id/btnhor1"
        app:layout_constraintWidth_percent=".1" />

    <LinearLayout
        android:id="@+id/imgback"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintHeight_percent=".025"
        app:layout_constraintLeft_toLeftOf="@id/btnBack"
        app:layout_constraintRight_toRightOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:srcCompat="@drawable/back" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hshor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".038" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/hs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="1"
        android:background="@drawable/backhs"
        app:layout_constraintHeight_percent=".59"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hshor1"
        app:layout_constraintHeight_max="420dp"/>

    <TextView
        android:id="@+id/tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:gravity="end"
        android:text="DETAIL PESANAN"
        android:textColor="#5B4949"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/imgback"
        app:layout_constraintRight_toRightOf="@id/cv2"
        app:layout_constraintTop_toTopOf="@id/imgback" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cv2"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintDimensionRatio="1:1.45"
        android:maxHeight="20dp"
        android:maxWidth="350dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardhor1"
        app:layout_constraintLeft_toRightOf="@id/cardver1"
        app:layout_constraintRight_toLeftOf="@id/cardver2"
        app:layout_constraintBottom_toTopOf="@id/cardhor2">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.05" />
            <TextView
                android:id="@+id/titile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:fontFamily="@font/roboto_light"
                android:text="Detail Lansia"
                android:textColor="@color/colorPrimary"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/cdhor3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdver3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdver2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.08" />

            <TextView
                android:id="@+id/a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:text="Nama    :"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toTopOf="@id/nama" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".29" />

            <TextView
                android:id="@+id/nama"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:layout_marginTop="17dp"
                android:text="Semarangknsknfskdnfkdsnfkksdnkfksasdsaddnfksdkdsjhdsnf"
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@id/cdver"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/titile" />

            <TextView
                android:id="@+id/b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:text="Umur     :"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toTopOf="@id/umur" />
            <TextView
                android:id="@+id/umur"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:text="Gendejndjsksd"
                android:layout_marginTop="12dp"
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@id/cdver"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/nama" />

            <TextView
                android:id="@+id/c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:text="Gender  :"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toTopOf="@id/gender" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:text="Genderfmk"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toRightOf="@id/cdver"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/umur" />


            <TextView
                android:id="@+id/d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:text="Hobi      :"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toTopOf="@id/hobi" />

            <TextView
                android:id="@+id/hobi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:singleLine="false"
                android:text="hobiapa aja ayang penting bagus lahhhhh"
                android:layout_marginTop="12dp"
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@id/cdver"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/gender" />
            <TextView
                android:id="@+id/e"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:text="Riwayat :"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toTopOf="@id/riwayat" />

            <TextView
                android:id="@+id/riwayat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:singleLine="false"
                android:text="riwayat penyakitttttttttttttttttttttt yaaaaaaaaa"
                android:layout_marginTop="12dp"
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@id/cdver"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/hobi" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>