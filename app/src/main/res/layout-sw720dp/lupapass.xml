<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cons"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintHeight_default="percent"
    app:layout_constraintWidth_default="percent">
    <RelativeLayout
        android:id="@+id/progressbar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:translationZ="20dp"
        android:elevation="30dp"
        android:visibility="gone"
        android:background="@drawable/backbluebig3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/prgs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            style="?android:attr/progressBarStyleLarge"/>
    </RelativeLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/backhor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8pt"
        android:background="@drawable/backbluewhite"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/backhor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardhor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardhor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardver1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.078" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardver2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintDimensionRatio="2:1"
        android:maxHeight="20dp"
        android:maxWidth="350dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardhor1"
        app:layout_constraintLeft_toRightOf="@id/cardver1"
        app:layout_constraintRight_toLeftOf="@id/cardver2"
        app:layout_constraintBottom_toTopOf="@id/cardhor2">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.15" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdver2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.93" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdver1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.07" />


            <TextView
                android:id="@+id/emailTv"
                android:labelFor="@id/emailEdtx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                android:fontFamily="@font/helvetica_medium"
                android:text="LUPA PASSWORD"
                android:textColor="#000"
                android:textSize="19sp"
                app:layout_constraintTop_toBottomOf="@id/cdhor1"
                app:layout_constraintLeft_toRightOf="@id/cdver1"
                app:layout_constraintRight_toRightOf="@id/cdver2" />
            <TextView
                android:id="@+id/Tv"
                android:labelFor="@id/emailEdtx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                android:fontFamily="@font/helvetica_light"
                android:text="Silahkan Hubungi Admin"
                android:textColor="#000"
                android:textSize="19sp"
                android:layout_marginTop="20dp"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintTop_toBottomOf="@id/emailTv"
                app:layout_constraintLeft_toLeftOf="@id/emailTv" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>