<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".025"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".975"/>
        <RelativeLayout
            android:padding="5dp"
            android:id="@+id/satu"
            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/ver1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.45"
            android:background="@drawable/bordergreen2">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ps1"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dua"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toLeftOf="@id/ver2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.45"
            android:background="@drawable/bordergreen2">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ps2"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:padding="5dp"
            android:id="@+id/tiga"
            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/ver1"
            app:layout_constraintTop_toBottomOf="@id/satu"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.45"
            android:background="@drawable/bordergreen2">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ps3"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toStartOf="@id/dua"
           app:layout_constraintTop_toTopOf="@id/tiga"
           app:layout_constraintEnd_toEndOf="@id/dua">
           <TextView
               android:id="@+id/textView25"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               android:textColor="@color/colorPrimary"
               android:text="PERAWATAN"
               android:layout_marginTop="35dp"
               android:fontFamily="@font/roboto_bold"
               android:textSize="22sp"
               />
           <TextView
               android:id="@+id/textView26"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/colorSecond"
               android:text="SOSIAL"
               android:textSize="22sp"
               android:layout_marginTop="10dp"
               android:fontFamily="@font/roboto_bold"
               app:layout_constraintTop_toBottomOf="@id/textView25" />
       </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:paddingBottom="40dp"
            android:background="@drawable/xmlbg6"
            app:layout_constraintTop_toBottomOf="@id/tiga"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/sat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="15dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp">
                    <TextView
                        android:id="@+id/visi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/roboto_light"
                        android:text="VISI"
                        android:textSize="25sp"/>
                    <TextView
                        android:id="@+id/tul"
                        android:textColor="@color/colorBlack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:lineSpacingExtra="7dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        app:layout_constraintVertical_bias=".5"
                        app:layout_constraintTop_toBottomOf="@id/visi"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/teks_visi_kompetensi_ps"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/du"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="15dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintTop_toBottomOf="@id/sat"
                android:background="@drawable/backtentang">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp">
                    <TextView
                        android:id="@+id/misi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/roboto_light"
                        android:text="MISI"
                        android:textSize="25sp"/>
                    <TextView
                        android:id="@+id/tig"
                        android:textColor="@color/colorBlack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="16sp"
                        android:lineSpacingExtra="7dp"
                        app:layout_constraintVertical_bias=".5"
                        app:layout_constraintTop_toBottomOf="@id/misi"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/teks_misi_ps1"
                        />
                    <TextView
                        android:id="@+id/pat"
                        android:textColor="@color/colorBlack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="16sp"
                        android:lineSpacingExtra="7dp"
                        app:layout_constraintTop_toBottomOf="@id/tig"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/teks_misi_ps2"
                        />
                    <TextView
                        android:id="@+id/lim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:lineSpacingExtra="7dp"
                        app:layout_constraintTop_toBottomOf="@id/pat"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/teks_misi_ps3"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>