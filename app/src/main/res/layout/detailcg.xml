<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintHeight_default="percent"
    app:layout_constraintWidth_default="percent">

    <RelativeLayout
        android:id="@+id/progressbar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:translationZ="20dp"
        android:elevation="30dp"
        android:visibility="gone"
        android:background="@drawable/backbluebig3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/prgs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            style="?android:attr/progressBarStyleLarge"/>
    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardhor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.095" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btnhor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.014" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btn2hor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.025" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btn2hor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardhor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.97" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardver1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.045" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardver2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.955" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_max="90dp"
        android:background="@drawable/backblue2"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#FFFFFF"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/cv2"
        app:layout_constraintTop_toBottomOf="@id/btnhor1"
        app:layout_constraintWidth_max="120dp"
        app:layout_constraintWidth_percent=".11" />

    <LinearLayout
        android:id="@+id/imgback"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintHeight_percent=".025"
        app:layout_constraintLeft_toLeftOf="@id/btnBack"
        app:layout_constraintRight_toRightOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:srcCompat="@drawable/back" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hshor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".038" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/hs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="1"
        android:background="@drawable/backhs"
        app:layout_constraintHeight_percent=".59"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hshor1"
        app:layout_constraintHeight_max="420dp"/>

    <TextView
        android:id="@+id/tit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="13sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginEnd="15dp"
        android:text="DETAIL CAREGIVER"
        android:gravity="end"
        android:textColor="#5B4949"
        app:layout_constraintBottom_toBottomOf="@id/imgback"
        app:layout_constraintHeight_percent=".025"
        app:layout_constraintLeft_toRightOf="@id/imgback"
        app:layout_constraintRight_toRightOf="@id/cv2"
        app:layout_constraintTop_toTopOf="@id/imgback" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxWidth="350dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/cardhor2"
        app:layout_constraintDimensionRatio="1:1.45"
        app:layout_constraintLeft_toRightOf="@id/cardver1"
        app:layout_constraintRight_toLeftOf="@id/cardver2"
        app:layout_constraintTop_toBottomOf="@id/cardhor1"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btninfo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/backfotobtn"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#FFFFFF"
                android:translationZ="1dp"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/bgcard"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_max="90dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintRight_toRightOf="@id/bgcard"
                app:layout_constraintWidth_max="120dp"
                app:layout_constraintWidth_percent=".1" />

            <LinearLayout
                android:id="@+id/imginfo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:translationZ="2dp"
                app:layout_constraintBottom_toBottomOf="@id/btninfo"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent=".04"
                app:layout_constraintLeft_toLeftOf="@id/btninfo"
                app:layout_constraintRight_toRightOf="@id/btninfo"
                app:layout_constraintTop_toTopOf="@id/btninfo">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    app:layout_constrainedHeight="true"
                    app:layout_constrainedWidth="true"
                    app:srcCompat="@drawable/about" />
            </LinearLayout>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cardbghor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <RelativeLayout
                android:id="@+id/bgcard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/backbluebigmed"
                app:layout_constraintBottom_toBottomOf="@id/cardbghor1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profilecg"
                app:layout_constraintBottom_toBottomOf="@id/bgcard"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_max="200dp"
                app:layout_constraintHeight_percent=".22"
                app:layout_constraintLeft_toLeftOf="@id/bgcard"
                app:layout_constraintRight_toRightOf="@id/bgcard"
                app:layout_constraintTop_toTopOf="@id/bgcard" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.835" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".97" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdver1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdver2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="26dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdver3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.335" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.385" />

            <TextView
                android:id="@+id/nama"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/helvetica_light"
                android:text="CareGiver1"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/cdhor4"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/cdhor3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.42" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.46" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/helvetica_light"
                android:paddingVertical="1sp"
                android:text="Gender   :"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/cdhor6"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/cdhor5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".29" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/roboto_light"
                android:text="Semarang"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/cdhor6"
                app:layout_constraintLeft_toRightOf="@id/cdver"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/cdhor5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.485" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.525" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/helvetica_light"
                android:paddingVertical="1sp"
                android:text="Umur      :"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/cdhor8"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/cdhor7" />

            <TextView
                android:id="@+id/umur"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/roboto_light"
                android:text="Umur"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/cdhor8"
                app:layout_constraintLeft_toRightOf="@id/cdver"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/cdhor7" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.55" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.59" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/helvetica_light"
                android:paddingVertical="1sp"
                android:text="Alamat    :"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/cdhor10"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/cdhor9" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.59" />

            <TextView
                android:id="@+id/kota"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/roboto_light"
                android:text="Gender"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/cdhor19"
                app:layout_constraintLeft_toRightOf="@id/cdver"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/cdhor9" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.615" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/helvetica_light"
                android:paddingVertical="1sp"
                android:text="Keahlian :"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintHeight_percent=".04"
                app:layout_constraintLeft_toLeftOf="@id/cdver2"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/cdhor15" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.655" />

            <TextView
                android:id="@+id/keahlian"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/roboto_light"
                android:lines="2"
                android:maxLines="2"
                android:minLines="2"
                android:singleLine="false"
                android:text="Genderfmk"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@id/cdhor18"
                app:layout_constraintLeft_toRightOf="@id/cdver"
                app:layout_constraintRight_toRightOf="@id/cdver3"
                app:layout_constraintTop_toBottomOf="@id/cdhor15" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cdhor11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.715" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/backblue2"
                android:fontFamily="@font/roboto_bold"
                android:paddingHorizontal="88dp"
                app:layout_constraintBottom_toTopOf="@id/cdhor2"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cdhor1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/helvetica_bold"
                android:gravity="center"
                android:text="PESAN"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/btnNext"
                app:layout_constraintHeight_percent=".032"
                app:layout_constraintLeft_toLeftOf="@id/btnNext"
                app:layout_constraintRight_toRightOf="@id/btnNext"
                app:layout_constraintTop_toTopOf="@id/btnNext" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>