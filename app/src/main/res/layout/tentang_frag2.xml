<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:paddingHorizontal="15dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/ss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam Kerja"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/backblue"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senin s.d. Jum’at (Pkl. 07.00 – 16.00 WIB)                                                      Sabtu – Minggu (Libur/Off Service)"
                android:gravity="start"
                android:fontFamily="@font/roboto_light"
                android:lineSpacingExtra="10sp"
                android:textSize="16sp"
                android:paddingLeft="15dp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/dd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Paket Layanan"
                android:background="@drawable/backblue"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:textSize="18sp"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:layout_marginTop="30dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:background="@drawable/backtentang">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="15dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@drawable/backtentang3">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintWidth_percent="0.5"
                            android:fontFamily="@font/roboto_light"
                            android:textColor="#fff"
                            android:text="Paket Harian"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintWidth_percent="0.5"
                            android:fontFamily="@font/roboto_thin"
                            android:gravity="end"
                            android:textColor="#fff"
                            android:text="Rp.150.000 / Hari"
                            android:textSize="17sp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/back"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textColor="@color/colorBlack"
                        android:paddingTop="15dp"
                        android:layout_marginHorizontal="15dp"
                        android:text="Pemeliharaan Kebersihan Diri"
                        android:fontFamily="@font/roboto_light"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        app:layout_constraintTop_toBottomOf="@id/tv2"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Perawatan Kulit"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv3"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Perawatan Rambut"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv4"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Perawatan Mulut / Gigi"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv5"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Perawatan Telinga"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv6"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Perawatan Hidung"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv7"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Perawatan Kuku"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv8"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Perawatan Kaki"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv9"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:layout_marginHorizontal="15dp"
                        android:text="- Perawatan Alat Kelamin dan Sekitarnya"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv10"
                        android:text="Rekreasi"
                        android:layout_marginTop="15dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tv12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv11"
                        android:fontFamily="@font/roboto_light"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:text="- Mendampingi Mengisi Waktu Luang"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        app:layout_constraintTop_toBottomOf="@id/tv12"
                        android:fontFamily="@font/roboto_light"
                        android:layout_marginTop="7dp"
                        android:text="- Menamani Membaca / Bercerita"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        app:layout_constraintTop_toBottomOf="@id/tv13"
                        android:fontFamily="@font/roboto_light"
                        android:layout_marginTop="7dp"
                        android:text="- Mendampingi Berwisata Dengan Kursi  Roda "
                        android:textSize="16sp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                app:layout_constraintRight_toRightOf="@id/card"
                app:layout_constraintLeft_toLeftOf="@id/card"
                app:layout_constraintTop_toBottomOf="@id/cv1"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="15dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:background="@drawable/backtentang">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/back2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/backtentang3">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintWidth_percent="0.5"
                            android:fontFamily="@font/roboto_light"
                            android:textColor="#fff"
                            android:text="Paket Bulanan"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintWidth_percent="0.5"
                            android:fontFamily="@font/roboto_thin"
                            android:textColor="#fff"
                            android:gravity="end"
                            android:text="Rp.2.000.000 / Bulan"
                            android:textSize="17sp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/back2"
                        android:fontFamily="@font/roboto_light"
                        android:text="Pemeliharaan Kebersihan Diri"
                        android:paddingTop="15dp"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="18sp"
                        android:textColor="@color/colorBlack"/>
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/ver01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent=".12"/>
                    <TextView
                        android:id="@+id/tv03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv02"
                        android:layout_marginTop="7dp"
                       android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Perawatan Kulit"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv03"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Perawatan Rambut"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv05"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv04"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Perawatan Mulut / Gigi"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv06"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv05"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Perawatan Telinga"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv07"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv06"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Perawatan Hidung"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv08"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv07"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Perawatan Kuku"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv09"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv08"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Perawatan Kaki"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv010"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv09"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:layout_marginHorizontal="15dp"
                        android:text="- Perawatan Alat Kelamin dan Sekitarnya"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv011"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv010"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:text="Rekreasi"
                        android:textSize="18sp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/tv012"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv011"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Mendampingi Mengisi Waktu Luang"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv013"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv012"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Menamani Membaca / Bercerita"
                        android:layout_marginHorizontal="15dp"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv015"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv013"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:layout_marginHorizontal="15dp"
                        android:text="- Mendampingi Berwisata Dengan Kursi  Roda "
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv016"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv015"
                        android:text="Pemeriksaan Kesehatan"
                        android:textSize="18sp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/tv017"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv016"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Pemeriksaan Suhu Badan"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv018"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv017"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Pemeriksaan Tensi Darah"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv019"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv018"
                        android:layout_marginTop="7dp"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Pemeriksaan Gula Darah"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv020"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        app:layout_constraintTop_toBottomOf="@id/tv019"
                        android:fontFamily="@font/roboto_light"
                        android:text="- Mendampingi Konsultasi / Kontrol Dokter"
                        android:textSize="16sp"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>