<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/barhor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".11"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@id/barhor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/brver1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".3"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/tilhor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".33"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/tilhor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".67"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/loghor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".325"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/loghor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".675"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/tilver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".48"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/logver1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".3"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/logver2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".5"/>
            <TextView
                android:translationZ="1dp"
                android:id="@+id/txtfragment_profil"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="PESANAN"
                android:textColor="#FFFFFF"
                android:autoSizeMaxTextSize="40sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintTop_toBottomOf="@id/tilhor1"
                app:layout_constraintBottom_toTopOf="@id/tilhor2"
                app:layout_constraintLeft_toRightOf="@id/tilver"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.145"/>

            <ImageView
                android:id="@+id/icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:translationZ="1dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintBottom_toBottomOf="@id/loghor2"
                app:layout_constraintEnd_toEndOf="@id/logver2"
                app:layout_constraintStart_toStartOf="@id/logver1"
                app:layout_constraintTop_toTopOf="@id/loghor1"
                app:srcCompat="@drawable/profile" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/backbluebar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/brver1">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#FFFFFF"
                app:layout_constraintDimensionRatio="1:1"
                android:scaleType="fitCenter"
                android:src="@drawable/backredic"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintBottom_toBottomOf="@id/loghor2"
                app:layout_constraintEnd_toStartOf="@+id/brver1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/loghor1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bar"
        app:layout_constraintBottom_toBottomOf="parent">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>