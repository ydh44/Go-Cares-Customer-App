<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardhor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.095" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btnhor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.014" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btn2hor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.025" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btn2hor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardhor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.97" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardver1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.045" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardver2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.955" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_max="90dp"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/backblue2"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#FFFFFF"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/cv2"
        app:layout_constraintTop_toBottomOf="@id/btnhor1"
        app:layout_constraintWidth_max="120dp"
        app:layout_constraintWidth_percent=".11" />

    <LinearLayout
        android:id="@+id/imgback"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintHeight_percent=".025"
        app:layout_constraintLeft_toLeftOf="@id/btnBack"
        app:layout_constraintRight_toRightOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:srcCompat="@drawable/back" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hshor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".038" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/hs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="1"
        android:background="@drawable/backhs"
        app:layout_constraintHeight_percent=".59"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hshor1"
        app:layout_constraintHeight_max="420dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="40sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintHeight_percent=".03"
        android:fontFamily="@font/roboto_bold"
        android:textAlignment="textEnd"
        android:layout_marginEnd="15dp"
        android:text="PEMBAYARAN"
        android:textColor="#5B4949"
        app:layout_constraintBottom_toBottomOf="@id/imgback"
        app:layout_constraintLeft_toRightOf="@id/imgback"
        app:layout_constraintRight_toRightOf="@id/cardver2"
        app:layout_constraintTop_toTopOf="@id/imgback" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintDimensionRatio="1:1.4"
            app:layout_constraintTop_toBottomOf="@id/cardhor1"
            app:layout_constraintLeft_toRightOf="@id/cardver1"
            app:layout_constraintRight_toLeftOf="@id/cardver2"
            app:layout_constraintBottom_toTopOf="@id/cardhor2">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/card1hor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />
            <androidx.cardview.widget.CardView
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_margin="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/card1hor1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/tithor1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.0725" />
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/tithor2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.1775" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="30dp"
                        android:autoSizeMaxTextSize="40sp"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/helvetica_hv"
                        android:text="Terima kasih."
                        android:textAlignment="textStart"
                        android:textColor="@color/colorPrimary"
                        app:layout_constrainedHeight="true"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toTopOf="@id/tithor2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tithor1" />
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/cardbghor1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.25" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/backbluebig3"
                        app:layout_constraintTop_toBottomOf="@id/cardbghor1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/hor1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent=".07"/>
                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="30dp"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintWidth_percent=".6"
                            app:layout_constraintHeight_percent=".2"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/helvetica_medium"
                            android:text="Silahkan lanjutkan pembayaran sejumlah"
                            android:textColor="#000"
                            app:layout_constrainedHeight="true"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/hor1" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="30dp"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintWidth_percent=".6"
                            app:layout_constraintHeight_percent=".1"
                            android:autoSizeMaxTextSize="30sp"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeTextType="uniform"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/helvetica_medium"
                            android:text="Rp. 1.500.000"
                            android:textColor="#000"
                            app:layout_constrainedHeight="true"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txt1" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintHeight_percent=".37"
                app:layout_constraintVertical_bias="1"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_margin="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="30dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintWidth_percent=".6"
                        app:layout_constraintHeight_percent=".3"
                        android:layout_marginTop="12dp"
                        android:autoSizeMaxTextSize="30sp"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/helvetica_hv"
                        android:text="Unggah bukti pembayaran anda disini"
                        android:textColor="@color/colorPrimary"
                        app:layout_constrainedHeight="true"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/cdver1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.075" />
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/cdver2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.65" />
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/cdhor1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.4" />
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/cdhor2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.6" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnGalerry"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/backblue3"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="#FFFFFF"
                        android:padding="10dp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="30sp"
                        android:autoSizeMinTextSize="8sp"
                        app:layout_constrainedWidth="true"
                        app:layout_constrainedHeight="true"
                        android:text="AMBIL DARI GALERI"
                        app:layout_constraintBottom_toTopOf="@id/cdhor2"
                        app:layout_constraintLeft_toRightOf="@id/cdver1"
                        app:layout_constraintTop_toBottomOf="@id/cdhor1"
                        app:layout_constraintRight_toLeftOf="@id/cdver2"/>
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/cdhor3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.7" />
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/cdhor4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.9" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCamera"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/backblue3"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="#FFFFFF"
                        android:padding="10dp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="30sp"
                        android:autoSizeMinTextSize="8sp"
                        app:layout_constrainedWidth="true"
                        app:layout_constrainedHeight="true"
                        android:text="AMBIL FOTO"
                        app:layout_constraintBottom_toTopOf="@id/cdhor4"
                        app:layout_constraintLeft_toRightOf="@id/cdver1"
                        app:layout_constraintTop_toBottomOf="@id/cdhor3"
                        app:layout_constraintRight_toLeftOf="@id/cdver2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>